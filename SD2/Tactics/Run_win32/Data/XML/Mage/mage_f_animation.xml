<?xml version="1.0"?>

<isoanims>

<isoanim id="mage_f.idle" loop="loop">
   <frame src="mage_f.idle" duration="1.0" />
</isoanim>
<isoanim id="mage_f.weak" loop="loop">
   <frame src="mage_f.weak" duration="1.0" />
</isoanim>
<isoanim id="mage_f.dead" loop="loop">
   <frame src="mage_f.dead" duration="1.0" />
</isoanim>
<isoanim id="mage_f.walk" loop="loop">
   <frame src="mage_f.walk0" duration=".25" />
   <frame src="mage_f.walk1" duration=".25" />
</isoanim>
<isoanim id="mage_f.attack" loop="clamp">
   <frame src="mage_f.walk1" duration=".25" />
   <frame src="mage_f.attack2" duration=".1" />
   <frame src="mage_f.attack3" duration=".1" />
   <frame src="mage_f.attack4" duration=".1" />
</isoanim>

<isoanim id="mage_f.charge" loop="clamp">
   <frame src="mage_f.cast" duration=".25" />
</isoanim>

<isoanim id="mage_f.spell_attack" loop="clamp">
   <frame src="mage_f.attack0" duration=".75" />
   <frame src="mage_f.attack3" duration=".25" />
</isoanim>

<isoanim id="mage_f.hit" loop="clamp">
   <frame src="mage_f.hit" duration="1.0" />
</isoanim>

<isoanim id="mage_f.die" loop="clamp">
   <frame src="mage_f.crouch" duration=".5" />
   <frame src="mage_f.dead" duration="1.0" />
</isoanim>

<!-- jump is normalized;
   25% for prep
   25% for upward
   25% for downward
   25% for landing -->
<isoanim id="mage_f.jump" loop="clamp">
   <frame src="mage_f.crouch" duration=".25" />
   <frame src="mage_f.cast" duration=".50" />
   <frame src="mage_f.crouch" duration=".25" />
</isoanim>

</isoanims>